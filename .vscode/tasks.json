{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "bun: install",
            "detail": "Install dev dependencies",
            "type": "shell",
            "command": "bun install",
            "group": "build",
            "options": {
                "cwd": "./"
            }
        },
        {
            "label": "bun: dev",
            "detail": "Run dev server",
            "type": "shell",
            "command": "bun --bun run dev",
            "group": "build",
            "options": {
                "cwd": "./"
            }
        },
        {
            "label": "bun: build",
            "detail": "Build to xcode dist path",
            "type": "shell",
            "command": "bun --bun run build",
            "group": "build",
            "options": {
                "cwd": "./"
            }
        },
        {
            "label": "xcode: build",
            "detail": "xcodebuild",
            "type": "shell",
            "command": "xcodebuild -scheme Userscripts build",
            "group": "build",
            "options": {
                "cwd": "./xcode/"
            }
        },
        {
            "label": "xcode: rebuild",
            "detail": "bun build + xcodebuild",
            "presentation": {
                "reveal": "silent"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "bun: build",
                "xcode: build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}